<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_item_treeview_iv_1"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/directory_divider_day" />

        <ImageView
            android:id="@+id/list_item_treeview_iv_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:rotation="180"
            android:scaleType="fitXY"
            android:src="@drawable/back_day" />

        <external.shimmer.ShimmerTextView
            android:id="@+id/list_item_treeview_shtv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/nothing"
            android:textColor="#000"
            android:textSize="16sp" />

        <com.aiyou.view.DarkImageView
            android:id="@+id/div"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/collect" />

        <external.OtherView.Win8ProgressBar
            android:id="@+id/list_item_treeview_progress_bar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#09c"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_treeview_iv_3"
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/directory_divider_day" />

    <ImageView
        android:id="@+id/list_item_treeview_iv_4"
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="20dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/directory_divider_day" />

    <ImageView
        android:id="@+id/list_item_treeview_iv_5"
        android:layout_width="2dp"
        android:layout_height="50dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="40dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/directory_divider_day" />

</FrameLayout>